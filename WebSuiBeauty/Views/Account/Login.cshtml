
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
</head>

<body>
    <section class="duyen-login-form">
        <div class="duyen-login-form-grid">
                <div class="duyen-login-block-grid">
                    <div class="form-right-inf">
                        @*<h2>Đăng nhập </h2>
                        <div class="social-media">
                            <a href="https://www.facebook.com/duyenduyen2803" class="fb"><span class="fab fa-facebook" aria-hidden="true"></span> Đăng nhập với Facebook</a>
                            <a href="#" class="gg"><span class="fab fa-google" aria-hidden="true"></span> Đăng nhập với Google</a>
                        </div>*@
                        <div class="login-form-content">
                            <h2 style="font-size:2rem; font-weight:bold">ĐĂNG NHẬP</h2>

                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "signin-form" }))
                            {
                                <div class="one-frm">
                                    <input type="email" name="Email" required placeholder="Email của bạn" autofocus>
                                </div>
                                <div class="one-frm">
                                    <input type="password" name="Password" required placeholder="Mật khẩu">
                                </div>
                                <label class="check-remaind">
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                    <p class="remember">Nhớ mật khẩu</p>
                                </label>
                                if (!ViewData.ModelState.IsValid)
                                {
                                    <div style="color: red" class="validation-summary-errors">
                                        @Html.ValidationSummary()
                                    </div>
                                }
                                <button type="submit" class="btn btn-style mt-3">Đăng nhập </button>
                                <p class="already">Bạn chưa có tài khoản? <a href="@(Url.Action("Register", "Account"))">Đăng ký</a></p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        <!-- //form -->
    </section>
</body>