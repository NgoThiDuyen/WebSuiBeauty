<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SuiBeauty</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Assets/Style/responsive.css" rel="stylesheet" />
</head>
<body>
    <style>
        .navbar {
            width: 100%;
            float: left;
            background-color: #fef4ec;
            height: auto;
            background-size: 100%;
        }
    </style>

    <!-- header section start -->
    <div class="header_section">
        <div class="container-fluid">
            <nav class="navbar fixed-top justify-content-between">
                <div id="mySidenav" class="sidenav">
                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                    <a href="index.html">Trang chủ</a>
                    <a href="products.html">Sản phẩm</a>
                    <a href="about.html">Giới thiệu</a>
                    <a href="client.html">Khách hàng</a>
                    <a href="contact.html">Liên hệ</a>
                </div>
                <span class="toggle_icon" style="padding-left:1rem" onclick="openNav()"><img style="height: 70%;width:70%" src="~/Assets/Images/toggle-icon.png"></span>
                <a class="logo" href="index.html"><img src="~/Assets/Images/logo.png"></a>
                <form class="form-inline ">
                    <div class="login_text" style="padding-right:1rem">
                        <ul>
                            <li><a href="@(Url.Action("Login", "Account"))"><img src="~/Assets/Images/user-icon.png"></a></li>
                            <li><a href="#"><img src="~/Assets/Images/bag-icon.png"></a></li>
                            <li><a href="#"><img src="~/Assets/Images/search-icon.png"></a></li>
                        </ul>
                    </div>
                </form>
            </nav>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <!-- Javascript files-->
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/jquery-3.0.0.min.js"></script>
    <script src="js/plugin.js"></script>
    <!-- sidebar -->
    <script src="js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="js/custom.js"></script>
    <!-- javascript -->
    <script src="js/owl.carousel.js"></script>
    <script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "100%";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }
    </script>
    <script>
        window.onload = function () {
            document.body.style.width = window.innerWidth + "px";
            document.body.style.height = window.innerHeight + "px";
        };
    </script>
    <script>
        $(window).scroll(function () {
            var scrollTop = $(this).scrollTop();

            if (scrollTop > 50) {
                $('body').addClass('scrolling-navbar');
            } else {
                $('body').removeClass('scrolling-navbar');
            }
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
