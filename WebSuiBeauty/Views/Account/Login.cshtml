
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link href="~/Assets/Style/style.css" rel="stylesheet" />
    <link href="~/Assets/Style/responsive.css" rel="stylesheet" />
    <link href="~/Content/jquery.mCustomScrollbar.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <link href="https://fonts.googleapis.com/css?family=Great+Vibes|Open+Sans:400,700&display=swap&subset=latin-ext" rel="stylesheet">
    <link rel="stylesheet" href="css/owl.theme.default.min.css">
    <link href="~/Content/owl.carousel.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link href="//fonts.googleapis.com/css2?family=Nunito:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="~/Assets/Style/style_login.css" rel="stylesheet" type="text/css" media="all" />
    <script src="https://kit.fontawesome.com/af562a2a63.js" crossorigin="anonymous"></script>
</head>

<body>
    <section class="duyen-login-form">
        <div class="duyen-login-form-grid">
                <div class="duyen-login-block-grid">
                    <div class="form-right-inf">
                        @*<h2>Đăng nhập </h2>
                        <div class="social-media">
                            <a href="https://www.facebook.com/duyenduyen2803" class="fb"><span class="fab fa-facebook" aria-hidden="true"></span> Đăng nhập với Facebook</a>
                            <a href="#" class="gg"><span class="fab fa-google" aria-hidden="true"></span> Đăng nhập với Google</a>
                        </div>*@
                        <div class="login-form-content">
                            <h2 style="font-size:2rem; font-weight:bold">ĐĂNG NHẬP</h2>

                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "signin-form" }))
                            {
                                <div class="one-frm">
                                    <input type="email" name="Email" required placeholder="Email của bạn" autofocus>
                                </div>
                                <div class="one-frm">
                                    <input type="password" name="Password" required placeholder="Mật khẩu">
                                </div>
                                <label class="check-remaind">
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                    <p class="remember">Nhớ mật khẩu</p>
                                </label>
                                if (!ViewData.ModelState.IsValid)
                                {
                                    <div style="color: red" class="validation-summary-errors">
                                        @Html.ValidationSummary()
                                    </div>
                                }
                                <button type="submit" class="btn btn-style mt-3">Đăng nhập </button>
                                <p class="already">Bạn chưa có tài khoản? <a href="@(Url.Action("Register", "Account"))">Đăng ký</a></p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        <!-- //form -->
    </section>
</body>